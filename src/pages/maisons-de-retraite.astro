---
import Base from "../layouts/Layout.astro";
import fs from 'fs';
import yaml from 'js-yaml';

// Load YAML
const ateliers = yaml.load(fs.readFileSync('./src/content/ateliers.yaml', 'utf8'));

// Helpers
const frDate = new Intl.DateTimeFormat("fr-FR", { day: "numeric", month: "long", year: "numeric" });
const frDay = new Intl.DateTimeFormat("fr-FR", { day: "numeric" });
const frMonthYear = new Intl.DateTimeFormat("fr-FR", { month: "long", year: "numeric" });

function sameDay(d1, d2) {
  return (
    d1.getFullYear() === d2.getFullYear() &&
    d1.getMonth() === d2.getMonth() &&
    d1.getDate() === d2.getDate()
  );
}

// Flatten all events and keep only those with href="/maisons-de-retraite"
// Include toDate, prevent duplicates, sort descending by toDate
const maisonRetraitesEvents = Object.values(ateliers)
  .flat()
  .filter(event => event.href === "/maisons-de-retraite")
  .map(event => {
    const fromDate = new Date(event.from);
    const toDate = event.to ? new Date(event.to) : fromDate;

    let displayDate;
    if (sameDay(fromDate, toDate)) {
      displayDate = frDate.format(fromDate);
    } else if (
      fromDate.getFullYear() === toDate.getFullYear() &&
      fromDate.getMonth() === toDate.getMonth()
    ) {
      // Same month: show only day for "from" and "to", then month + year at end
      displayDate = `${frDay.format(fromDate)} → ${frDay.format(toDate)} ${frMonthYear.format(toDate)}`;
    } else {
      displayDate = `${frDate.format(fromDate)} → ${frDate.format(toDate)}`;
    }

    const multiYear = fromDate.getFullYear() !== toDate.getFullYear();

    return {
      ...event,
      fromDate,
      toDate,
      displayDate,
      uniqueKey: event.from + event.titre + event.lieu, // for duplicates
      multiYear,
    };
  })
  // Remove duplicates
  .filter((event, index, self) =>
    index === self.findIndex(e => e.uniqueKey === event.uniqueKey)
  )
  // Sort descending by toDate
  .sort((a, b) => b.toDate - a.toDate);
---

<Base title="Ateliers pour maisons de retraite et ÉPHAD">
  <main class="mx-auto max-w-[735px] mt-14">

    <h1 class="text-3xl font-bold mb-6">
      Ateliers de calligraphie pour le bien-être des seniors
    </h1>

    <h2 class="text-2xl font-semibold mb-4">
      Mes formats d'atelier pour les maisons de retraite et Éhpad
    </h2>

    <div class="overflow-x-auto">
      <table class="min-w-full border border-gray-300 divide-y divide-gray-200">
        <thead class="bg-gray-100">
          <tr>
            <th class="px-4 py-2 text-left font-medium text-gray-700">Horaires</th>
            <th class="px-4 py-2 text-left font-medium text-gray-700">Libres</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <tr>
            <td class="px-4 py-2">Durée</td>
            <td class="px-4 py-2">2 heures minimum</td>
          </tr>
          <tr class="bg-gray-50">
            <td class="px-4 py-2">Nombre de participants</td>
            <td class="px-4 py-2">De 6 à 12</td>
          </tr>
          <tr>
            <td class="px-4 py-2">Tarifs</td>
            <td class="px-4 py-2">60 euros HT de l'heure</td>
          </tr>
        </tbody>
      </table>
    </div>

    <h2 class="text-2xl font-semibold mt-10 mb-4">
      Interventions passées
    </h2>

    <ul class="mt-6 space-y-4">
      {maisonRetraitesEvents.map(event => (
        <li
          key={event.uniqueKey}
          class={`border-b pb-2 ${event.multiYear ? 'bg-yellow-100 font-semibold' : ''}`}
        >
          <strong>{event.displayDate}</strong> — {event.titre}
          <br />
          <em>{event.lieu}</em>
          <br />
          {event.details}
        </li>
      ))}
    </ul>

  </main>
</Base>
