---
import { SEO } from "astro-seo";
import Footer from "@/components/footer.astro";
import Navbar from "@/components/navbar/navbar.astro";
import InfoBox from "@/components/info-box.astro";

import "@fontsource-variable/inter/index.css";
import "@fontsource-variable/bricolage-grotesque";
import "../styles/global.css";

export interface Props {
  title?: string;
}

const { title } = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site).toString();
const resolvedImageWithDomain = new URL("/opengraph.webp", Astro.site).toString();

const makeTitle = title ? `${title} | Calligraphie Lyon` : "Calligraphie chinoise";
---

<!doctype html>
<html lang="fr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.webp" />
    <meta name="generator" content={Astro.generator} />

    <SEO
      title={makeTitle}
      description="Cours privés et collectifs de calligraphie chinoise à Lyon."
      canonical={canonicalURL}
      twitter={{
        creator: "@surjithctly",
        site: "@web3templates",
        card: "summary_large_image",
      }}
      openGraph={{
        basic: {
          url: canonicalURL,
          type: "website",
          title: `Ateliers de calligraphie chinoise à Lyon`,
          image: resolvedImageWithDomain,
        },
        image: {
          alt: "Ateliers de calligraphie chinoise à Lyon",
        },
      }}
    />
  </head>
  <body class="bg-white text-gray-900">
    <Navbar />

    <main class="mx-auto max-w-[1300px] flex flex-col lg:flex-row gap-8 px-4 py-8">
      <div class="flex-1">
        <slot /> <!-- Page content -->
      </div>

      <aside class="lg:w-1/3">
        <InfoBox /> <!-- Info box appears on all pages -->
      </aside>
    </main>

    <Footer />

    <style is:global>
      /* Improve page speed */
      img {
        content-visibility: auto;
      }
    </style>
  </body>
</html>
